		<color value="#ff9944"/>
		<color value="#ff0000"/>
	</gradient>
	<gradient type="vertical" x="1" y="height / 2 - 3" width="width - 1" height="height / 2 - 4">
		<color value="#cc0000"/>
		<color value="#ff0000"/>
	</gradient>
	
	<include name="button_outline"/>
</draw_ops>

<draw_ops name="button_bg_pressed">
        <gradient type="vertical" x="1" y="1" width="width - 1" height="height / 2 - 4">
		<color value="shade/gtk:bg[SELECTED]/1.4"/>
