<draw_ops name="button_bg">
 <gradient type="vertical" x="1" y="1" width="width - 1" height="height / 2 - 4">
		<color value="shade/gtk:bg[SELECTED]/0.99"/>
		<color value="shade/gtk:bg[SELECTED]/1.5"/>
	</gradient>
	<gradient type="vertical" x="1" y="height / 2 - 3" width="width - 1" height="height / 2 - 4">
		<color value="shade/gtk:bg[SELECTED]/0.98"/>
		<color value="shade/gtk:bg[SELECTED]/1.02"/>
	</gradient>
	<include name="button_outline"/>
</draw_ops>

<draw_ops name="button_bg_red">
        <gradient type="vertical" x="1" y="1" width="width - 1" height="height / 2 - 4">
		<color value="shade/#c45c00/0.8"/>
		<color value="shade/#9e2626/1.0"/>
	</gradient>
	<gradient type="vertical" x="1" y="height / 2 - 3" width="width - 1" height="height / 2 - 4">
		<color value="shade/#750b0b/0.9"/>
		<color value="shade/#a70d0d/0.9"/>
	</gradient>
	
	<include name="button_outline"/>
	<line color="shade/gtk:bg[SELECTED]/0.55" width="1"
		x1="1" y1="height - 7" x2="width -1" y2="height - 7"/>
	<line color="shade/gtk:bg[SELECTED]/0.0" width="1"
		x1="width" y1="height - 7" x2="width" y2="height - 7"/>
</draw_ops>

<draw_ops name="button_bg_prelight">
        <gradient type="vertical" x="1" y="1" width="width - 1" height="height / 2 - 4">
		<color value="shade/gtk:bg[SELECTED]/1.2"/>
		<color value="shade/gtk:bg[SELECTED]/2.0"/>
	</gradient>
	<gradient type="vertical" x="1" y="height / 2 - 3" width="width - 1" height="height / 2 - 4">
		<color value="shade/gtk:bg[SELECTED]/1.2"/>
		<color value="shade/gtk:bg[SELECTED]/1.6"/>
	</gradient>
     
	<include name="button_outline"/>	
